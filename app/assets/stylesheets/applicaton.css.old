
/* Base styles */
html {
  font-family: var(--font-sans);
  color: var(--gray-9);
  /*background: var(--sand-1);*/
  animation: gradient 1s linear infinite;
  /*background-image: var(--gradient-5);*/
}

body {
  margin: 0;
  min-height: 100vh;
}

/* Heading styles */
h1, h2, h3, h4, h5, h6 {
  font-family: Inter;
  color: var(--gray-9);
  width: fit-content;
  margin: 0 auto;
  text-decoration: underline;
}

a {
}

a:hover {
  background: linear-gradient(90deg, blue 80%, transparent 80%);
  background-repeat: repeat-x;
  background-size: 12px 2px;
  animation: border-dance 4s infinite linear;
  text-decoration: none;
}

@keyframes border-dance {
  0% {
    background-position: 0px 25px;
  }
  100% {
    background-position: 24px 25px;
  }
}

h1 { font-size: var(--font-size-8); margin-bottom: var(--size-8); }
h2 { font-size: var(--font-size-6); }
h3 { font-size: var(--font-size-5); }

/* Text styles */
p {
  font-size: var(--font-size-4);
  line-height: var(--font-lineheight-3);
  margin: 0 auto;
  margin-bottom: var(--size-5);
  max-width: var(--size-md);
}

main {
  padding-top: var(--size-8);
  margin: 0 auto;
}

.card {
  border-radius: var(--radius-3);
  padding: var(--size-4);
  box-shadow: var(--shadow-2);
  transition: box-shadow 0.2s var(--ease-3);

  &:hover {
    box-shadow: var(--shadow-3);
  }
}

/* Navbar */
.navbar {
  padding-block: var(--size-3);
  position: sticky;
  top: 0;
  z-index: 100;
  background: transparent;
}

.navbar::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(to right, var(--cyan-0), var(--blue-0));
  opacity: 0.95;
  backdrop-filter: blur(8px);
  z-index: -1;
}

.navbar-content {
  max-width: var(--size-lg);
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-inline: var(--size-3);
}

.navbar-brand {
  font-size: var(--font-size-4);
  font-weight: var(--font-weight-7);
  color: var(--blue-7);
  padding: var(--size-2);
  transition: color 0.3s var(--ease-3);
}

.navbar-brand:hover {
  color: var(--blue-8);
}

.navbar-brand::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 2px;
  bottom: 0;
  left: 0;
  background: var(--blue-5);
  transform: scaleX(0);
  transition: transform 0.3s var(--ease-spring-3);
}

.navbar-brand:hover::after {
  transform: scaleX(1);
}

.navbar-links {
  display: flex;
  gap: var(--size-5);
}

.navbar-links a {
  background: 0;
  color: var(--blue-7);
  text-decoration: none;
  font-weight: var(--font-weight-5);
  padding: var(--size-2);
  position: relative;
  transition: all 0.2s var(--ease-3);
}

